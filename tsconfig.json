{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "es5", "es7", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"],
  "files": ["./index.ts"]
}
