{
  "parser": "@typescript-eslint/parser",

  "env": {
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },

  "extends": [
    "eslint-config-standard",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],

  "plugins": ["prettier"],

  "rules": {
    "no-irregular-whitespace": "off",
    "no-use-before-define": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
